{
    "name": "@passkeyper/core",
    "version": "1.0.0",
    "description": "Core cryptography and types for PassKeyPer",
    "main": "./dist/index.js",
    "module": "./dist/index.mjs",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "scripts": {
        "dev": "tsup --watch",
        "build": "tsup",
        "test": "vitest run",
        "test:watch": "vitest",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@noble/hashes": "^1.3.3",
        "libsodium-wrappers": "^0.7.13"
    },
    "devDependencies": {
        "@types/libsodium-wrappers": "^0.7.14",
        "tsup": "^8.0.1",
        "typescript": "^5.3.0",
        "vitest": "^1.0.4"
    }
}