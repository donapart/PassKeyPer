        "dotenv": "^16.3.1"
    },
    "devDependencies": {
        "@types/express": "^4.17.21",
        "@types/cors": "^2.8.17",
        "@types/jsonwebtoken": "^9.0.5",
        "@types/bcrypt": "^5.0.2",
        "@types/ws": "^8.5.10",
        "tsx": "^4.7.0",
