{
    "name": "@passkeyper/desktop",
    "version": "1.0.0",
    "description": "PassKeyPer desktop application",
    "main": "dist-electron/main.js",
    "author": "PassKeyPer Team",
    "license": "AGPL-3.0",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "build:strict": "tsc && vite build",
        "preview": "vite preview",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "vite build && electron-builder",
        "type-check": "tsc --noEmit",
        "lint": "eslint src --ext .ts,.tsx --max-warnings 0 || true",
        "test": "echo 'Tests will be added'"
    },
    "dependencies": {
        "@passkeyper/core": "*",
        "@passkeyper/storage": "*",
        "lucide-react": "^0.294.0",
        "node-ipc": "^12.0.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.21.0",
        "zustand": "^4.4.7"
    },
    "devDependencies": {
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "@vitejs/plugin-react": "^4.2.1",
        "autoprefixer": "^10.4.16",
        "concurrently": "^8.2.2",
        "electron": "^28.1.0",
        "electron-builder": "^26.0.12",
        "postcss": "^8.4.32",
        "tailwindcss": "^3.4.0",
        "typescript": "^5.3.0",
        "vite": "^5.0.8",
        "vite-plugin-electron": "^0.28.0",
        "wait-on": "^7.2.0"
    },
    "build": {
        "appId": "com.passkeyper.desktop",
        "productName": "PassKeyPer",
        "electronVersion": "28.1.0",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "dist-electron/**/*"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": ["x64"]
                }
            ],
            "requestedExecutionLevel": "asInvoker"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true
        },
        "mac": {
            "target": [
                "dmg"
            ]
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ]
        }
    }
}
